extends layout/layout

block vars
    - var pageTitle = 'Mакет №2 gulp'
    - var pageBodyClass = 'homepage'
    - var pageHeaderClass = ''

block content
    //- здесь код страницы
    header
        .header
            .header__logo 
                img.header__logo-img(src="./assets/imgs/logoWhite.png", alt="logo")
            .header__title
                img.header__img(src="./assets/imgs/titleImg.png", alt="titleImg")
                .header__text An award-winning construction management firm
            .header__footer Scroll down
    nav
        .container
            .nav
                .nav__logo
                    img(src="./assets/imgs/logoBlack.png", alt="logo")
                ul.nav__list
                    li.nav__item 
                        a.nav__link(href="#") Home
                    li.nav__item 
                        a.nav__link.active(href="#") About
                    li.nav__item 
                        a.nav__link(href="#") Services
                    li.nav__item 
                        a.nav__link(href="#") Work
                    li.nav__item 
                        a.nav__link(href="#") Contact
    section.our-history
        .container
            .story
                .story__text Our story 
            .history
                .history__content
                    h2.history__title Founded in 2011 by John Mathew Smith, <span class="history__title--blue">Konstruct</span> has become the number one construction management firm
                    p.history__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat. Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.
                .history__rules
                    mixin ruleImg(rule_img,rule_alt)
                        img.rule__img(src=rule_img alt=rule_alt)
                    .rule
                        +ruleImg("./assets/imgs/wePlan.png","wePlan")
                        span.rule__text we </br> plan
                    .rule
                        +ruleImg("./assets/imgs/manage.png","weManage")
                        span.rule__text we </br> manage
                    .rule
                        +ruleImg("./assets/imgs/build.png","weBuild")
                        span.rule__text we </br> build
    section.capability
        .container
            .capability-header
                .capability-header__title OUR CAPABILITIES
                .capability-header__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.
                .capability-header__btn
                    a.btn(href="#") ALL SERVICES
            .capability-bottom
                mixin capabilityImg(cap_img,cap_alt)
                    img(src=cap_img, alt=cap_alt)
                .capability-item
                    .capability-item__img
                        +capabilityImg("./assets/imgs/notebook.png","notebookPicture")
                    .capability-item__title PROJECT AND CONSTRUCTION MANAGEMENT
                    .capability-item__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.
                .capability-item
                    .capability-item__img
                        +capabilityImg("./assets/imgs/shop.png","shopPicture")
                    .capability-item__title STRUCTURE AUDIT AND MAINTENANCE
                    .capability-item__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.
                .capability-item
                    .capability-item__img
                        +capabilityImg("./assets/imgs/house.png","housePicture")
                    .capability-item__title FACTORY CONSTRUCTION AND MODELING
                    .capability-item__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.

    .build
        .build__title Want to build something amazing?
        .build__btn 
            a.btn(href="#") GET IN TOUCH
    .subscribe
        .container 
            .email 
                .email__text Newsletter Signup
                form.email__form
                    input.email__input(type="text" placeholder="test@youremail.com")
                    button.btn.email__btn SIGNUP
    section.info
        .container
            .info-inner
                .info-text
                    .info-text__title Company
                    .info-text__logo
                        img(src="./assets/imgs/logoWhite.png", alt="logo") 
                    .info-text__content Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat.
                .info-menu
                    .info-menu__title links
                    .info-menu__content
                        ul.info-items
                            mixin item(text)
                                li.info-item 
                                    a.info-item__link(href="#")=text
                            +item('home')
                            +item('about')
                            +item('services')
                            +item('projects')
                            +item('contact us')
                        ul.info-menu__inner
                            +item('faq')
                            +item('terms')
                            +item('careers')
                        ul.info-menu__inner 
                            +item('blog')
                            +item('partners')
                            +item('news')
                .info-contact
                    ul.contact-items
                        li.contact-item
                            p.contact-item__title contact us
                        li.contact-item 
                            a.contact-item__link(href="#") 213 Baker Street Oriel City Kounty 7000 KNW, Kountry Name 
                        li.contact-item 
                            a.contact-item__link(href="tel:") +23 994 233 4022
                        li.contact-item 
                            a.contact-item__link(href="mailto:info@konstruct.com") info@konstruct.com
                .info-icon
                    a.info-icon__link(href="#") 
                        img.info-icon__img(src="./assets/imgs/socials.svg", alt="socialPicture")
    footer.footer 
        .container 
            .footer__text © 2017 Konstruct Inc. Designed by Jane Kathryn Teo 

